<h3> Delivery Address </h3>

<%= form_for current_user do |f| %>

  <%= f.fields_for :addresses do |address| %>
    <% if !address.object.id.present? %>
      <%= address.hidden_field :address_type %>

      <label><%= address.object.address_type %></label>
      <fieldset>
        <p>
          <%= address.label :street_1 %>
          <%= address.text_field :street_1 %>
        </p>

        <p>
          <%= address.label :street_2 %>
          <%= address.text_field :street_2 %>
        </p>

        <p>
          <%= address.label :city %>
          <%= address.text_field :city %>
        </p>

        <p>
          <%= address.label :state %>
          <%= address.text_field :state %>
        </p>

        <p>
          <%= address.label :zip_code %>
          <%= address.text_field :zip_code %>
        </p>
      </fieldset>
    <% end %>
  <% end %>

  <%= f.fields_for :messages do |message| %>
    <% if !message.object.id.present? %>
      <label> Message to Recipient </label>
      <fieldset>
        <p>
          <%= message.label :content %>
          <%= message.text_area :content %>
        </p>
      </fieldset>
    <% end %>
  <% end %>

  <% current_user.current_cart.line_products.each do |line_product| %>
   <p><%= line_product.product.name %> | <%= number_to_currency(line_product.product.price.to_f) %> | Quantity: <%= line_product.quantity  %>
  <% end %> </p>
  <p> Grand Total: <strong>$<%= number_to_currency(current_user.current_cart.total.to_f) %></strong> </p>




  <%= f.submit "Review my Order" %>
<% end %>
