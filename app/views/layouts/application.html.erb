<!DOCTYPE html>
<html>
  <head>
    <title>RailsPortfolioProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <%= render 'layouts/header' %>


    <h1><%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %></h1>
    <h1><%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %></h1>
    <h1><%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %></h1>

    <%= yield %>
  </body>
</html>
