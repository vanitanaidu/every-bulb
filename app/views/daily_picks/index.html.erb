
 <h1> Daily Pick </h1>



    <p> <%= link_to image_tag @product.image.url(:large) %> <p>

     <%= @product.name %>
     <br>

     <%= @product.description %>
     <br>
     Delivery Date: Today! (<%= @product.delivery_date %>)

       <% if user_signed_in? %>

           <%= form_for [@product, @line_product], method: :post do |f| %>

              <%= f.label :quantity  %>
              <%= f.text_field :quantity %>
         <br>
            <%= f.submit "Add to cart" %>
            <% end %>

       <% else %>

       Please sign in to add this item to the cart

       <% end %>
