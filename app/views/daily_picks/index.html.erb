
 <h1> Daily Pick </h1>



    <p> <%= link_to image_tag(@product.image.url(:large)), @product.image.url %> <p>

     <%= @product.name %>
     <br>

     <%= @product.description %>
     <br>
     Delivery Date: Today! (<%= @product.delivery_date %>)

       <% if user_signed_in? %>

           <%= form_for @product, url: product_line_products_path(product_id: @product), method: "post" do |f| %>

                <%= f.fields_for :line_product do |line_form| %>

                  <%= line_form.label :quantity  %>
                  <%= line_form.text_field :quantity %>
                <% end %>
         <br>
            <%= f.submit "Add to cart" %>
            <% end %>

       <% else %>

       Please sign in to add this item to the cart

       <% end %>
